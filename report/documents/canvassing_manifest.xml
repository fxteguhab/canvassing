		<template id="report_canvassing_manifest_document">
			<t t-call="report.external_layout">
				<div class="page">
					<div class="oe_structure"/>

					<h2>Canvassing</h2>

					<div class="row mt32 mb32">
						<div class="col-xs-3">
							<strong>Name:</strong>
							<p t-field="o.name"/>
						</div>
						<div class="col-xs-3">
							<strong>Vehicle:</strong>
							<p t-field="o.fleet_vehicle_id.name"/>
						</div>
						<div class="col-xs-3">
							<strong>Driver 1:</strong>
							<p t-field="o.driver1_id.name"/>
						</div>
						<div class="col-xs-3">
							<strong>Driver 2:</strong>
							<p t-field="o.driver2_id.name"/>
						</div>
					</div>

					<h3>Pickings</h3>
					<table class="table table-condensed">
						<thead>
							<tr>
								<th>
									<strong>Task</strong>
								</th>
								<th>
									<strong>Address</strong>
								</th>
								<th>
									<strong>Sign</strong>
								</th>
								<th>
									<strong>Items</strong>
								</th>
							</tr>
						</thead>
						<tbody>
							<tr t-foreach="o.stock_line_ids" t-as="line">
								<td>
									<span t-field="line.move_line_id.name"/>
								</td>
								<td>
									<span t-field="line.address"/>
								</td>
								<td>
									<span/>
								</td>
								<td>
									<span t-field="line.date_due"/>
								</td>
							</tr>
						</tbody>
					</table>

					<h3>Invoices</h3>
					<table class="table table-condensed">
						<thead>
							<tr>
								<th>
									<strong>Task</strong>
								</th>
								<th>
									<strong>Address</strong>
								</th>
								<th>
									<strong>Sign</strong>
								</th>
								<th class="text-right">
									<strong>Amount</strong>
								</th>
							</tr>
						</thead>
						<tbody>
							<tr t-foreach="o.invoice_line_ids" t-as="line">
								<td>
									<span t-field="line.move_line_id.name"/>
								</td>
								<td>
									<span t-field="line.address"/>
								</td>
								<td>
									<span/>
								</td>
								<td>
									<span t-field="line.invoice_id.amount_total"/>
								</td>
							</tr>
						</tbody>
					</table>

